{
  "name": "php-clone",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "php -S 0.0.0.0:8000",
    "build:css": "tailwindcss -i ./public/assets/css/custom.css -o ./public/assets/css/styles.css",
    "watch:css": "tailwindcss -i ./public/assets/css/custom.css -o ./public/assets/css/styles.css --watch",
    "format": "prettier --write '**/*.{js,php,json,css}'",
    "db": "docker rm -f my-mysql && docker run --name my-mysql -e MYSQL_ROOT_PASSWORD=rootpass -e MYSQL_DATABASE=breachtimes -p 3306:3306 -v $(pwd)/database/database.sql:/docker-entrypoint-initdb.d/init.sql -d mysql:8.0",
    "seed": "php database/seed.php",
    "push": "git add . && git commit -m 'update' && git push"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@prettier/plugin-php": "^0.24.0",
    "autoprefixer": "^10.4.22",
    "postcss": "^8.5.6",
    "prettier": "^3.7.3",
    "tailwindcss": "^3.4.18"
  }
}
